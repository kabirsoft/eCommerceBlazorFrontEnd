@inherits LayoutComponentBase
@using eCommerceBlazorFrontEnd.Components.SharedPages
@using eCommerceBlazorFrontEnd.Components.SharedPages.Cart
@using eCommerceBlazorFrontEnd.Components.SharedPages.User

<div class="page">

    <main>
        <div class="top-row px-2">
            <HomeButton />
            <Search />
            <UserButton />
            <CartCounter />
        </div>

        <div class="nav-menu">
            <ShopNavMenu />
        </div>
 
        <article class="content px-2">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
