@page "/product/search/{searchText}"

@using eCommerceBlazorFrontEnd.Components.SharedPages
@using eCommerceBlazorFrontEnd.Services.ProductService
@inject IProductService ProductService

<PageTitle>SearchProductsPage</PageTitle>
<h3>Search text: @SearchText</h3>

<ProductList />

@code {
    [Parameter]
    public string? SearchText { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await ProductService.SearchProducts(SearchText);
    }
}
