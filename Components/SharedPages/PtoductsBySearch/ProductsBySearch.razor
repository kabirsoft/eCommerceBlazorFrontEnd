@page "/Products"


@if (ProductService.Products == null || ProductService.Products.Count == 0)
{
    <span> @ProductService.Message </span>
}
else
{
    <ul class="list-unstyled">
        @foreach (var product in ProductService.Products)
        {
            <li class="media my-3">
                <div class="media-img-wrapper mr-2">
                    <a href="/product/@product.Id">
                        <img class="media-img" src="@product.ImageUrl" alt="@product.Title" />
                    </a>
                </div>
                <div class="media-body">
                    <a href="/product/@product.Id">
                        <h4 class="mb-0">@product.Title</h4>
                    </a>
                    <p>@product.Description</p>
                    <h5 class="price">
                        Price: @GetProductPrice(product)
                    </h5>
                </div>
            </li>
        }
    </ul>

    if (!string.IsNullOrEmpty(ProductService.LastSearchText))
    {
        for (var i = 1; i <= ProductService.TotalPages; i++)
        {
            <a class="btn @(i == ProductService.CurrentPage ? "btn-info": "btn-outline-info")
                      page-selection"
               href="/product/search/@ProductService.LastSearchText/@i">@i</a>
        }
    }
}
